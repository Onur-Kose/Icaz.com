    //}

    //string ad = mem.Ad;
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["Message"]
    </div>
}
else if (TempData["Message1"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message1"]
    </div>
}
<h3 class="m-2 ">
    Üyelik Bilgileri Güncelleme Sayfası
</h3>

<hr />

<div class="row m-2">
    <div class="col-11">
        @*<div class="col-5"><img class="w-75" src="/images/@foto" class="rounded mx-auto d-block" alt="@ad progil fotoğrafı"></div>*@
        <span class=" m-0 col-12">
            <a class="btn btn-success p-1 mt-3 col-12" asp-action="MemberuploadP">Resim Yükle</a>
        </span>
        <form asp-action="MemberUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <hr />
            <div class="form-group ">
                <label asp-for="Ad" class="control-label">Adınız</label>
                <input required asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Soyad" class="control-label">Soyadınız</label>
                <input required asp-for="Soyad" class="form-control" />
                <span asp-validation-for="Soyad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cinsiyet" class="control-label"></label>
                <input required asp-for="Cinsiyet" class="form-control"/>
                <span asp-validation-for="Cinsiyet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input required asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input required asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input required id="inputEmail" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KullaniciURL" class="control-label"></label>
                <input asp-for="KullaniciURL" class="form-control" />
                <span asp-validation-for="KullaniciURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemberDetail" class="control-label">Hakkımda </label>
                <textarea rows="4" asp-for="MemberDetail" class="form-control"></textarea>
                <span asp-validation-for="MemberDetail" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Kaydet" class="btn btn-primary col-3 " />
            </div>
        </form>

        <div class=" d-flex justify-content-between">
            <span class=" m-0 col-3">
                <a class="btn btn-danger mt-3 col-12" asp-action="PasswordUpdate">Şifremi Güncelle</a>
            </span>
            <span class="  m-0 ">
                <a class="btn btn-danger mt-3  " asp-action="MemberDelete">Hesabı Sil</a>
            </span>

        </div>






    </div>
</div>